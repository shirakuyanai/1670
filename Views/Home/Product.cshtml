@{
	ViewData["Title"] = "Product";
    var product = ViewData["Product"] as Product;
}
@if (product != null)
{
      <section class="content">
        <div class="card card-solid">
          <div class="container card-body">
            <div class="row">
              <div class="col-12 col-lg-6">
                <h3 class="d-inline-block d-lg-none">
                  @product.Name
                </h3>
                <div class="col-12 d-flex justify-content-center">
                  <img
                src="@product.Image"
                    class="product-image"
                    alt="Product Image"
                  />
                </div>
              </div>
              <div class="col-12 col-lg-6">
                <h3 class="my-3">
                  <strong>
                    @product.Name
                  </strong>
                </h3>
                <p>
                  @product.Description
                </p>

                <hr />
                <h2>Colors</h2>
                <div class="btn-group-toggle" data-toggle="buttons">
                  <label class="btn btn-default text-center">
                    <input
                      type="radio"
                      class="d-none"
                      name="color_option"
                      id="color_option_1"
                      autocomplete="off"
                    />
                    Green
                    <br />
                    <i
                      class="fas fa-circle fa-2x"
                      style="color: green;"
                    ></i>
                  </label>
                  <label class="btn btn-default text-center">
                    <input
                      type="radio"
                      class="d-none"
                      name="color_option"
                      id="color_option_2"
                      autocomplete="off"
                    />
                    Blue
                    <br />
                    <i
                      class="fas fa-circle fa-2x"
                      style="color: blue"
                    ></i>
                  </label>
                  <label class="btn btn-default text-center">
                    <input
                      type="radio"
                      class="d-none"
                      name="color_option"
                      id="color_option_3"
                      autocomplete="off"
                    />
                    Purple
                    <br />
                    <i
                      class="fas fa-circle fa-2x"
                      style="color: purple"
                    ></i>
                  </label>
                  <label class="btn btn-default text-center">
                    <input
                      type="radio"
                      class="d-none"
                      name="color_option"
                      id="color_option_4"
                      autocomplete="off"
                    />
                    Red
                    <br />
                    <i
                      class="fas fa-circle fa-2x"
                      style="color: red"
                    ></i>
                  </label>
                  <label class="btn btn-default text-center">
                    <input
                      type="radio"
                      class="d-none"
                      name="color_option"
                      id="color_option_5"
                      autocomplete="off"
                    />
                    Orange
                    <br />
                    <i
                      class="fas fa-circle fa-2x"
                      style="color: orange"
                    ></i>
                  </label>
                </div>

                <div class="mt-5">
                  <h1 class="mb-0 h1 text-danger">$@product.Price</h1>
                  <h4 class="mt-0">
                    <lgall>Ex Tax: $80.00 </lgall>
                  </h4>
                </div>

                <div class="mt-12">
                  <div class="btn btn-primary me-5 p-3">
                    
                    <a asp-area="" asp-controller="Cart" asp-action="Add" asp-route-id="@product.Pid" class="nav-link" class="product-btn btn-cart">
                        <i class="fas fa-cart-plus fa-lg mr-2"></i>
                        Add to Cart
                    </a>
                  </div>

                  <div class="btn btn-default ms-5 p-3 float-end">
                    <i class="fas fa-heart fa-lg mr-2"></i>
                    Add to Wishlist
                  </div>
                </div>

                <div class="mt-4 product-share">
                  <a href="#" class="text-gray">
                    <i class="fab fa-facebook-square fa-2x"></i>
                  </a>
                  <a href="#" class="text-gray">
                    <i class="fab fa-twitter-square fa-2x"></i>
                  </a>
                  <a href="#" class="text-gray">
                    <i class="fas fa-envelope-square fa-2x"></i>
                  </a>
                  <a href="#" class="text-gray">
                    <i class="fas fa-rss-square fa-2x"></i>
                  </a>
                </div>
              </div>
            </div>
            <div class="row mt-4">
              <nav class="w-100">
                <div class="nav nav-tabs" id="product-tab" role="tablist">
                  <a
                    class="nav-item nav-link active"
                    id="product-desc-tab"
                    data-toggle="tab"
                    href="#product-desc"
                    role="tab"
                    aria-controls="product-desc"
                    aria-selected="true"
                  >
                    Description
                  </a>
                  <a
                    class="nav-item nav-link"
                    id="product-comments-tab"
                    data-toggle="tab"
                    href="#product-comments"
                    role="tab"
                    aria-controls="product-comments"
                    aria-selected="false"
                  >
                    Comments
                  </a>
                  <a
                    class="nav-item nav-link"
                    id="product-rating-tab"
                    data-toggle="tab"
                    href="#product-rating"
                    role="tab"
                    aria-controls="product-rating"
                    aria-selected="false"
                  >
                    Rating
                  </a>
                </div>
              </nav>
              <div class="tab-content p-3" id="nav-tabContent">
                <div
                  class="tab-pane fade show active"
                  id="product-desc"
                  role="tabpanel"
                  aria-labelledby="product-desc-tab"
                >
                  @product.Description
                </div>
                <div
                  class="tab-pane fade"
                  id="product-comments"
                  role="tabpanel"
                  aria-labelledby="product-comments-tab"
                >
                  Vivamus rhoncus nisl sed venenatis luctus. Sed condimentum
                  risus ut tortor feugiat laoreet. Suspendisse potenti. Donec et
                  finibus sem, ut commodo lectus. Cras eget neque dignissim,
