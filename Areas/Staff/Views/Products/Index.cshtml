@model IEnumerable<server.Areas.Staff.Models.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Staff/Views/Shared/_Layout.cshtml";
}

<h1>Product Management</h1>

<p>
	<a asp-action="Create"><button type="button" class="btn btn-success">Add Product</button></a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Brand)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Stock)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Image)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Color)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Gift)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Model)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Warranty)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Brand.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Stock)
				</td>
				<td>
					<img src="@item.Image" style="width: 100px; height: 100px;" />
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Color)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Gift)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Model)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Warranty)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Pid"><i class="fa-solid fa-pen-to-square m-2" style="font-size:200%; color: white;"></i></a>
					@*<a asp-action="Delete" asp-route-id="@item.Pid">Delete</a>*@
			</tr>
		}
	</tbody>
</table>
